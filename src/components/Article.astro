<article>
  <slot />

  <style>
    article,
    article > :global(div) {
      @apply flex max-w-2xl flex-col gap-3 hyphens-auto;
    }

    article > :global(h1),
    article > :global(h2),
    article > :global(h3),
    article > :global(h4),
    article > :global(h5),
    article > :global(h6) {
      @apply font-mono font-semibold;
    }

    article > :global(h2),
    article > :global(h3),
    article > :global(h4),
    article > :global(h5),
    article > :global(h6) {
      @apply mt-4;
    }

    article > :global(h1) {
      @apply mb-4 text-2xl;
    }

    article > :global(h2) {
      @apply text-xl;
    }

    article > :global(h3) {
      @apply text-lg;
    }

    article > :global(ul),
    article > :global(ol) {
      @apply ml-4 sm:ml-0;
    }

    article :global(ul) {
      @apply list-disc;
    }

    article :global(ol) {
      @apply list-decimal;
    }

    article :global(li::marker) {
      @apply text-text-deemphasize;
    }

    article :global(hr) {
      @apply border-border;
    }

    article > :global(:not(pre)) > :global(code) {
      @apply bg-code-bg text-sm;
    }

    article :global(mjx-container[jax="SVG"][display="true"]) {
      @apply flex justify-center;
    }

    article :global(mjx-container[jax="SVG"]:not([display="true"]) svg) {
      @apply inline;
    }

    article :global(blockquote) {
      @apply border-l border-border pl-2 pr-4 sm:pl-6 sm:pr-8;
      @apply text-text-deemphasize text-sm;
    }
  </style>
</article>
