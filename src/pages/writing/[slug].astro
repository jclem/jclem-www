---
import type { GetStaticPaths } from "astro";
import Article from "../../components/Article.astro";
import { getPublishedWriting } from "../../content/config";
import Site from "../../layouts/Site.astro";

export const getStaticPaths = (async () => {
  const posts = await getPublishedWriting();

  return posts.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content } = await post.render();
---

<Site title={post.data.title} description={post.data.summary}>
  <div class="flex flex-col items-start gap-8">
    <nav class="w-full font-mono">
      <ul class="flex justify-between">
        <li>
          <a href="/writing" class="text-inherit no-underline">
            ‚Üê Writing Archive
          </a>
        </li>

        <li>
          <a href="/" class="text-inherit no-underline">
            <div class="flex items-center gap-2">
              <img
                src="https://jclem.nyc3.cdn.digitaloceanspaces.com/profile/profile-1024.webp"
                alt="Photograph of Jonathan Clem"
                class="rounded-full h-4 w-4"
              />
              <span>Jonathan Clem</span>
            </div>
          </a>
        </li>
      </ul>
    </nav>

    <main class="w-full">
      <Article>
        <h1>{post.data.title}</h1>
        <Content />
      </Article>
    </main>
  </div>
</Site>
